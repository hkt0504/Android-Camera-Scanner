<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shutter_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.websoft.vantium.mobilescanner.camera.RotateImageView
            android:id="@+id/btnSwitchSingle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dock"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_capture_single_on" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip" />

        <com.websoft.vantium.mobilescanner.camera.RotateImageView
            android:id="@+id/btnSwitchMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dock"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_capture_batch_off" />

        <com.websoft.vantium.mobilescanner.camera.RotateImageView
            android:id="@+id/btnMultiDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dock"
            android:clickable="true"
            android:src="@drawable/ic_confirm_ok"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.websoft.vantium.mobilescanner.camera.RotateImageView
                android:id="@+id/btnShutter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_dock"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_capture_capure" />

            <com.websoft.vantium.mobilescanner.camera.RotateTextView
                android:id="@+id/txtMultiNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btnShutter"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/capture_num"
                android:gravity="center"
                android:text="0"
                android:textSize="10.0dip"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip" />

        <com.websoft.vantium.mobilescanner.camera.RotateImageView
            android:id="@+id/btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dock"
            android:src="@drawable/ic_capture_settings" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip" />

        <com.websoft.vantium.mobilescanner.camera.RotateImageView
            android:id="@+id/btnMultiImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dock"
            android:padding="10.0dip"
            android:src="@drawable/ic_capture_load"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>