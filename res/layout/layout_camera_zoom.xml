<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zooming_panel"
    android:layout_width="50.0dip"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:visibility="gone" >

    <LinearLayout
        android:id="@+id/zoom"
        android:layout_width="wrap_content"
        android:layout_height="240.0dip"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zoom_in" />

        <com.websoft.vantium.mobilescanner.camera.VerticalSeekBar
            android:id="@+id/zoom_bar"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1.0"
            android:maxHeight="8dp"
            android:minHeight="8dp"
            android:background="@drawable/slidebar_bg"
            android:progressDrawable="@drawable/slider"
            android:thumb="@drawable/zoom_slider"
            android:thumbOffset="0.0dip" />

        <ImageView
            android:id="@+id/zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zoom_out" />
    </LinearLayout>

</RelativeLayout>